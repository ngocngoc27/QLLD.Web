@model IEnumerable<QL_LaoDong.Models.Class>

<div class="container-fluid">
    <div class="row">
        <div class="col-12">
            <div class="page-title-box">
                <div class="page-title-right">
                    <ol class="breadcrumb m-0">
                        <li class="breadcrumb-item"><a href="javascript: void(0);">Admin</a></li>
                        <li class="breadcrumb-item"><a href="javascript: void(0);">Quản lý chung</a></li>
                        <li class="breadcrumb-item active">Lớp sinh viên</li>
                    </ol>
                </div>
                <h4 class="page-title">DANH MỤC CÁC LỚP SINH VIÊN</h4>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-sm-12">
            <div class="card-box table-responsive">
                <div class="btn-addoredit">
                    <a onclick="showInPopup('@Url.Action("AddOrEdit","Class",new {IdMn=0},Context.Request.Scheme)', 'THÊM LỚP MỚI')" class="btn btn-success text-white btn-sm"><i class="fas fa-plus-circle"></i> Thêm mới</a>
                </div>
                <br />
                <table id="datatable" class="table table-striped table-bordered dt-responsive nowrap" style="border-collapse: collapse; border-spacing: 0; width: 100%;">
                    <thead>
                        <tr>
                            <th>
                                Tên lớp
                            </th>
                            <th>
                                Sỉ số lớp
                            </th>
                            <th>
                                Tổng số ngày lao động
                            </th>
                            <th>
                                Khoa
                            </th>
                            <th>
                                Trạng thái
                            </th>
                            <th></th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => item.ClassName)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Total)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.TotalOfWork)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Faculty.FacultyName)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Status)
                            </td>
                            <td>
                                <a onclick="showInPopup('@Url.Action("AddOrEdit","Class",new {id=item.Id },Context.Request.Scheme)', 'CẬP NHẬT THÔNG TIN LỚP')" class="btn btn-info text-white btn-sm"><i class="fas fa-pencil-alt"></i></a>
                                <form asp-action="Delete" asp-route-id="@item.Id" onsubmit="return JQueryAjaxDelete(this);" class="d-inline">
                                    <button type="submit" class="btn btn-danger btn-sm"><i class="fas fa-trash-alt"></i></button>
                                </form>
                            </td>
                        </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
