@model IEnumerable<QL_LaoDong.Models.Class>

<a onclick="showInPopup('@Url.Action("AddOrEdit","Class",new {id=0},Context.Request.Scheme)', 'New Class')" class="btn btn-success text-white"><i class="fas fa-random"></i> Thêm lớp mới</a>
<br />
<br />
<table class="table">
    <thead>
        <tr>
            <th>
                Mã lớp
            </th>
            <th>
                Tên lớp
            </th>
            <th>
                Khóa đào tạo
            </th>
            <th>
                Loại hình đào tạo
            </th>
            <th>
                Sỉ số lớp
            </th>
            <th>
                Tổng số ngày lao động
            </th>
            <th>
                Trạng thái
            </th>
            <th>
                Khoa
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.ClassCode)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ClassName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Training)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.TypeOfEducation)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Total)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.TotalOfWork)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Status)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Faculty.FacultyName)
                </td>
                <td>
                    <a onclick="showInPopup('@Url.Action("AddOrEdit","Class",new {id=item.Id },Context.Request.Scheme)', 'Update Class')" class="btn btn-info text-white"><i class="fas fa-pencil-alt"></i> Cập nhật</a>
                    <form asp-action="Delete" asp-route-id="@item.Id" onsubmit="return JQueryAjaxDelete(this);" class="d-inline">
                        <input type="submit" value="Delete" class="btn btn-danger" />
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>
