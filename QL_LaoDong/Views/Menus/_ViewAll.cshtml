@model IEnumerable<QL_LaoDong.Models.Menus>


<div class="container-fluid">
    <div class="row">
        <div class="col-12">
            <div class="page-title-box">
                <div class="page-title-right">
                    <ol class="breadcrumb m-0">
                        <li class="breadcrumb-item"><a href="javascript: void(0);">Admin</a></li>
                        <li class="breadcrumb-item"><a href="javascript: void(0);">Quản lý danh mục</a></li>
                    </ol>
                </div>
                <h4 class="page-title">QUẢN LÝ DANH MỤC HỆ THỐNG</h4>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-sm-12">
            <div class="card-box table-responsive">
                @*<h4 class="header-title"><b>QUẢN LÝ DANH MỤC HỆ THỐNG</b></h4>*@
                <div class="btn-addoredit">
                    <a onclick="showInPopup('@Url.Action("AddOrEdit","Menus",new {IdMn=0},Context.Request.Scheme)', 'THÊM DANH MỤC MỚI')" class="btn btn-success text-white btn-sm"><i class="fas fa-plus-circle"></i> Thêm mới</a>
                </div>
                <br />
                <table id="datatable" class="table table-striped table-bordered dt-responsive nowrap" style="border-collapse: collapse; border-spacing: 0; width: 100%;">
                    <thead>
                        <tr>
                            <th>
                                Tiêu đề
                            </th>
                            <th>
                                Danh mục cha
                            </th>
                            <th>
                                Đường dẫn
                            </th>
                            <th>
                                Thứ tự danh mục
                            </th>
                            <th></th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Label)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Parent)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.UrlLink)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.OrderKey)
                                </td>
                                @*<td>
                                    @Html.DisplayFor(modelItem => item.UserAddNavigation.Username)
                                </td>*@
                                <td>
                                    <a onclick="showInPopup('@Url.Action("AddOrEdit","Menus",new {IdMn=item.IdMn },Context.Request.Scheme)', 'CẬP NHẬT DANH MỤC')" class="btn btn-info text-white btn-sm" data-toggle="tooltip" data-placement="bottom" title="Cập nhật danh mục"><i class="fas fa-pencil-alt"></i></a>
                                    <form asp-action="Delete" asp-route-id="@item.IdMn" onsubmit="return JQueryAjaxDelete(this);" class="d-inline">
                                        <button type="submit" class="btn btn-danger btn-sm" data-toggle="tooltip" data-placement="bottom" title="Xóa"><i class="fas fa-trash-alt"></i></button>
                                    </form>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
