@model IEnumerable<QL_LaoDong.Models.Tool>

<div class="page-header">
    <div class="page-block">
        <div class="row align-items-center">
            <div class="col-md-12">
                <div class="page-header-title">
                    <h5 class="m-b-10">Dashboard Analytics</h5>
                </div>
                <ul class="breadcrumb">
                    <li class="breadcrumb-item"><a href="index.html"><i class="feather icon-home"></i></a></li>
                    <li class="breadcrumb-item"><a href="#!">Danh mục dụng cụ lao động</a></li>
                </ul>
            </div>
        </div>
    </div>
</div>
<div class="row">
    <div class="col-xl-12">
        <div class="card">
            <div class="card-header">
                <h5>DANH MỤC DỤNG CỤ LAO ĐỘNG</h5>
            </div>
            <div class="btn-addoredit">
                <a onclick="showInPopup('@Url.Action("AddOrEdit","Tool",new {id=0},Context.Request.Scheme)', 'New Tool')" class="btn btn-success text-white"><i class="fas fa-random"></i> Thêm mới</a>
            </div>
            <div class="card-body table-border-style">
                <div class="table-responsive">
                    <table class="table">
                        <thead>
                            <tr>
                                <th>
                                    Tên dụng cụ
                                </th>
                                <th>
                                    Tổng số lượng
                                </th>
                                <th>
                                    Đơn vị tính
                                </th>
                                <th>
                                    Số lượng hiện có
                                </th>
                                <th>
                                    Khóa dụng cụ
                                </th>
                                <th></th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Tool1)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Sum)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Unit)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Available)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Lock)
                                    </td>
                                    <td>
                                        <a onclick="showInPopup('@Url.Action("AddOrEdit","Tool",new {id=item.Id },Context.Request.Scheme)', 'Update Tool')" class="btn btn-info text-white"><i class="fas fa-pencil-alt"></i> Cập nhật</a>
                                        <form asp-action="Delete" asp-route-id="@item.Id" onsubmit="return JQueryAjaxDelete(this);" class="d-inline">
                                            <input type="submit" value="Xóa" class="btn btn-danger" />
                                        </form>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>