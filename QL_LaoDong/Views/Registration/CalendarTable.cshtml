@model IEnumerable<QL_LaoDong.Models.Calendar>
@using QL_LaoDong.Helpers;
@{
    ViewData["Title"] = "CalendarTable";
}
<div class="container-fluid">
    <div class="row">
        <div class="col-12">
            <div class="page-title-box">
                <div class="page-title-right">
                    <ol class="breadcrumb m-0">
                        <li class="breadcrumb-item"><a href="javascript: void(0);">User</a></li>
                        <li class="breadcrumb-item"><a href="javascript: void(0);">Lao động</a></li>
                        <li class="breadcrumb-item active">Đăng ký lao động</li>
                    </ol>
                </div>
                <h4 class="page-title">DANH MỤC THỜI GIAN ĐĂNG KÝ LAO ĐỘNG</h4>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-sm-12">
            <div class="card-box table-responsive">
                <table id="datatable" class="table table-striped table-bordered dt-responsive nowrap" style="border-collapse: collapse; border-spacing: 0; width: 100%;">
                    <thead>
                        <tr>
                            <th>
                                Buổi
                            </th>
                            <th>
                                Thứ
                            </th>
                            <th>
                                Ngày
                            </th>
                            <th>
                                Số lượng giới hạn
                            </th>
                            <th>
                                Số lượng đã đăng ký
                            </th>
                            <th>
                                Trạng thái
                            </th>
                            <th></th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>
                                    @Html.DisplayFor(modelItem => item.SessionOfDay)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Weekdays)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Day)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.LimitsNumber)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.RegistrationTotal)
                                </td>
                                <td>
                                    @if (item.Status == (int)CalendarEnum.ChoPhepDangKy)
                                    {
                                        @Html.FormatValue(item.Status, "Cho phép đăng ký")
                                    }
                                    else if (item.Status == (int)CalendarEnum.KhoaDangKy)
                                    {
                                        @Html.FormatValue(item.Status, "Khóa đăng ký")
                                    }
                                </td>
                                <td>
                                    <a onclick="showInPopup('@Url.Action("Create","Registration",new {id=item.Id },Context.Request.Scheme)', 'ĐĂNG KÝ LAO ĐỘNG')" class="btn btn-info text-white btn-sm"><i class=" typcn typcn-pen"></i> Đăng ký</a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
