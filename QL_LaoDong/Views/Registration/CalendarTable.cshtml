@model IEnumerable<QL_LaoDong.Models.Calendar>

@{
    ViewData["Title"] = "CalendarTable";
}

<table class="table">
    <thead>
        <tr>
            <th>
                Buổi
            </th>
            <th>
                Thứ
            </th>
            <th>
                Ngày
            </th>
            <th>
                Số lượng giới hạn
            </th>
            <th>
                Số lượng đã đăng ký
            </th>
            <th>
                Trạng thái
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.SessionOfDay)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Weekdays)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Day)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.LimitsNumber)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.RegistrationTotal)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Status)
            </td>
            <td>
                @*<a asp-action="Create" asp-route-id="@item.Id">Edit</a>*@
                <a onclick="showInPopup('@Url.Action("Create","Registration",new {id=item.Id },Context.Request.Scheme)', 'ĐĂNG KÝ LAO ĐỘNG')" class="btn btn-info text-white btn-sm"><i class="fa fa-check-square" aria-hidden="true"></i></a>
            </td>
        </tr>
}
    </tbody>
</table>
