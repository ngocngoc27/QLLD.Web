@model QL_LaoDong.Models.Student

@{
    ViewData["Title"] = "AddOrEdit";
    Layout = null;
}
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="AddOrEdit" asp-route-id="@Model.Id" onsubmit="return JQueryAjaxPost(this);" autocomplete="off">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Mssv" class="control-label"></label>
                <input asp-for="Mssv" class="form-control" />
                <span asp-validation-for="Mssv" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="NumberOfWork" class="control-label"></label>
                <input asp-for="NumberOfWork" class="form-control" />
                <span asp-validation-for="NumberOfWork" class="text-danger"></span>
            </div>
            
            <div class="form-group">
                <label asp-for="AccountId" class="control-label"></label>
                <select asp-for="AccountId" class ="form-control" asp-items="@ViewBag.acc"></select>
            </div>
            <div class="form-group">
                <input type="submit" value="Submit" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
