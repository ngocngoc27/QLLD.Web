@model IEnumerable<QL_LaoDong.Models.Student>

    <div class="container-fluid">
        <div class="row">
            <div class="col-12">
                <div class="page-title-box">
                    <div class="page-title-right">
                        <ol class="breadcrumb m-0">
                            <li class="breadcrumb-item"><a href="javascript: void(0);">Zircos</a></li>
                            <li class="breadcrumb-item"><a href="javascript: void(0);">Tables</a></li>
                            <li class="breadcrumb-item active">Datatable</li>
                        </ol>
                    </div>
                    <h4 class="page-title">Datatable</h4>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-sm-12">
                <div class="card-box table-responsive">
                    <h4 class="header-title"><b>THÔNG TIN SINH VIÊN</b></h4>
                    <div class="btn-addoredit">
                        <a onclick="showInPopup('@Url.Action("AddOrEdit","Student",new {IdMn=0},Context.Request.Scheme)', 'New student')" class="btn btn-success text-white"><i class="fas fa-plus-circle"></i> Thêm mới</a>
                    </div>
                    <br />
                    <table id="datatable" class="table table-striped table-bordered dt-responsive nowrap" style="border-collapse: collapse; border-spacing: 0; width: 100%;">
                        <thead>
                            <tr>
                                <th>
                                    MSSV
                                </th>
                                <th>
                                    Số ngày lao động
                                </th>
                                <th>
                                    Khóa sinh viên
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.Account)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.Class)
                                </th>
                                <th></th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Mssv)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.NumberOfWork)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Lock)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Account.Password)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Class.ClassCode)
                                    </td>
                                    <td>
                                        <a onclick="showInPopup('@Url.Action("AddOrEdit","Student",new {id=item.Id },Context.Request.Scheme)', 'Update Student')" class="btn btn-info text-white"><i class="fas fa-pencil-alt"></i> Cập nhật</a>
                                        <form asp-action="Delete" asp-route-id="@item.Id" onsubmit="return JQueryAjaxDelete(this);" class="d-inline">
                                            <button type="submit" class="btn btn-danger"><i class="fas fa-trash-alt"></i></button>
                                        </form>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>