@model List<QL_LaoDong.Models.Workticker>

<div class="container-fluid">
    <div class="row">
        <div class="col-12">
            <div class="page-title-box">
                <div class="page-title-right">
                    <ol class="breadcrumb m-0">
                        <li class="breadcrumb-item"><a href="javascript: void(0);">Admin</a></li>
                        <li class="breadcrumb-item"><a href="javascript: void(0);">Lao động</a></li>
                        <li class="breadcrumb-item active">Quản lý đăng ký</li>
                    </ol>
                </div>
                <h4 class="page-title">QUẢN LÝ ĐĂNG KÝ LAO ĐỘNG</h4>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-sm-12">
            <div class="card-box table-responsive">
                @*<h4 class="header-title"><b>QUẢN LÝ ĐĂNG KÝ LAO ĐỘNG</b></h4>*@
                <div class="btn-addoredit">
                    <a onclick="showInPopup('@Url.Action("AddOrEdit","WorkTicker",new {IdMn=0},Context.Request.Scheme)', 'New workticker')" class="btn btn-success text-white btn-sm"><i class="fas fa-plus-circle"></i> Thêm mới</a>
                </div>
                <br />
                <table id="datatable" class="table table-striped table-bordered dt-responsive nowrap" style="border-collapse: collapse; border-spacing: 0; width: 100%;">
                    <thead>
                        <tr>
                            <th>
                                Buổi trong ngày
                            </th>
                            <th>
                                Thứ trong tuần
                            </th>
                            <th>
                                Ngày
                            </th>
                            <th>
                                Công việc
                            </th>
                            <th>
                                Trạng thái
                            </th>
                            <th></th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => item.Calendar.SessionOfDay)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Calendar.Weekdays)
                            </td>
                            <td>
                                @Convert.ToDateTime(item.Calendar.Day).ToString("dd/MM/yyyy")
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Job.Job1)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Status)
                            </td>
                            <td>
                                <a onclick="showInPopup('@Url.Action("AddOrEdit","WorkTicker",new {id=item.Id },Context.Request.Scheme)', 'Phân công công việc')" class="btn btn-info text-white btn-sm"><i class="fa fa-check-square" aria-hidden="true"></i></a>
                                <a onclick="showInPopup('@Url.Action("AddOrEdit","WorkTicker",new {id=item.Id },Context.Request.Scheme)', 'Phân công dụng cụ')" class="btn btn-success text-white btn-sm"><i class="fa fa-wrench"></i></a>
                                <form asp-action="Delete" asp-route-id="@item.Id" onsubmit="return JQueryAjaxDelete(this);" class="d-inline">
                                    <button type="submit" class="btn btn-danger"><i class="fas fa-trash-alt"></i></button>
                                </form>
                            </td>
                        </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
