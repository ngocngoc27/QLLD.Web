@model IEnumerable<QL_LaoDong.Models.Calendar>

<div class="container-fluid">
    <div class="row">
        <div class="col-12">
            <div class="page-title-box">
                <div class="page-title-right">
                    <ol class="breadcrumb m-0">
                        <li class="breadcrumb-item"><a href="javascript: void(0);">Admin</a></li>
                        <li class="breadcrumb-item"><a href="javascript: void(0);">Lao động</a></li>
                        <li class="breadcrumb-item active">Thời gian lao động</li>
                    </ol>
                </div>
                <h4 class="page-title">DANH MỤC THỜI GIAN LAO ĐỘNG</h4>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-sm-12">
            <div class="card-box table-responsive">
                <div class="btn-addoredit">
                    <a onclick="showInPopup('@Url.Action("AddOrEdit","Calendar",new {IdMn=0},Context.Request.Scheme)', 'THÊM THỜI GIAN ĐĂNG KÝ')" class="btn btn-success text-white btn-sm"><i class="fas fa-plus-circle"></i> Thêm mới</a>
                </div>
                <br />
                <table id="datatable" class="table table-striped table-bordered dt-responsive nowrap" style="border-collapse: collapse; border-spacing: 0; width: 100%;">
                    <thead>
                        <tr>
                            <th>
                                Buổi trong ngày
                            </th>
                            <th>
                                Thứ trong tuần
                            </th>
                            <th>
                                Ngày tháng năm
                            </th>
                            <th></th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>
                                    @Html.DisplayFor(modelItem => item.SessionOfDay)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Weekdays)
                                </td>
                                <td>
                                    @Convert.ToDateTime(item.Day).ToString("MM/dd/yyyy")
                                </td>
                                <td>
                                    <a onclick="showInPopup('@Url.Action("AddOrEdit","Calendar",new {id=item.Id },Context.Request.Scheme)', 'CẬP NHẬT THỜI GIAN ĐĂNG KÝ')" class="btn btn-info text-white btn-sm"><i class="fas fa-pencil-alt"></i></a>
                                    <form asp-action="Delete" asp-route-id="@item.Id" onsubmit="return JQueryAjaxDelete(this);" class="d-inline">
                                        <button type="submit" class="btn btn-danger"><i class="fas fa-trash-alt"></i></button>
                                    </form>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
