@model QL_LaoDong.Models.Groups
@{
    ViewData["Title"] = "CalendarDetail";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="container-fluid">
    <div class="row">
        <div class="col-12">
            <div class="page-title-box">
                <div class="page-title-right">
                    <ol class="breadcrumb m-0">
                        <li class="breadcrumb-item"><a href="javascript: void(0);">User</a></li>
                        <li class="breadcrumb-item"><a href="javascript: void(0);">Lao động</a></li>
                        <li class="breadcrumb-item active">Chi tiết lịch lao động</li>
                    </ol>
                </div>
                <h4 class="page-title">THÔNG TIN CHI TIẾT LỊCH LAO ĐỘNG</h4>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-sm-12">
            <div class="card-box table-responsive">
                <p class="text-muted text-overflow font-weight-bold">
                    <i class="ion ion-md-calendar"></i>
                    Buổi @Html.DisplayFor(model => model.Calendar.SessionOfDay), ngày @Convert.ToDateTime(Model.Calendar.Day).ToString("dd/MM/yyyy") (@Html.DisplayFor(model => model.Calendar.Weekdays))
                </p>
                <dl class="row">
                    <dt class="col-sm-2">
                        Tên nhóm
                    </dt>
                    <dd class="col-sm-10">
                        Nhóm @Html.DisplayFor(model => model.GroupsName)
                    </dd>
                    <dt class="col-sm-2">
                        Tên công việc
                    </dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.Job.JobName)
                    </dd>
                    <dt class="col-sm-2">
                        Mô tả
                    </dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.Job.Description)
                    </dd>
                    <dt class="col-sm-2">
                        Vị trí
                    </dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.Job.Locate)
                    </dd>
                    <dt class="col-sm-2">
                        Số ngày thụ hưởng
                    </dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.Job.BenefitOfDay)
                    </dd>
                </dl>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-sm-12">            
            <div class="card-box table-responsive">
                <h4 class="header-title">
                    DANH SÁCH DỤNG CỤ LAO ĐỘNG
                </h4>
                <br />
                <table id="datatable" class="table table-striped table-bordered dt-responsive nowrap" style="border-collapse: collapse; border-spacing: 0; width: 100%;">
                    <thead>
                        <tr>
                            <th>
                                Tên dụng cụ
                            </th>
                            <th>
                                Số lượng
                            </th>
                            <th>
                                Đơn vị tính
                            </th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (Toolticker item in ((ViewBag.listtool) as IEnumerable<Toolticker>))
                        {
                            <tr>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Tool.Tool1)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Amount)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Tool.Unit)
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-sm-12">
            <div class="card-box table-responsive">
                <h4 class="header-title">
                    DANH SÁCH SINH VIÊN
                </h4>
                <br />
                <table id="datatable" class="table table-striped table-bordered dt-responsive nowrap" style="border-collapse: collapse; border-spacing: 0; width: 100%;">
                    <thead>
                        <tr>
                            <th>
                                MSSV
                            </th>
                            <th>
                                Họ tên
                            </th>
                            <th>
                                Lớp
                            </th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (Muster item in ((ViewBag.liststudent) as IEnumerable<Muster>))
                        {
                            <tr>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Student.Mssv)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Student.Account.Fullname)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Student.Class.ClassName)
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
