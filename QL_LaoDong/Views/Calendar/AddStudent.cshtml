@model IEnumerable<QL_LaoDong.ViewModels.StudentVM>
@{
    ViewData["Title"] = "AddStudent";
    Layout = null;
}
<table id="datatable" class="table table-striped table-bordered dt-responsive nowrap" style="border-collapse: collapse; border-spacing: 0; width: 100%;">
    <thead>
        <tr>
            <th>
                MSSV
            </th>
            <th>
                Họ Tên
            </th>
            <th>
                Lớp
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Mssv)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Fullname)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ClassName)
                </td>
                <td>
                    <form asp-action="AddStudent" asp-route-id="@item.StudentId" asp-controller="Calendar" class="d-inline">
                        <input type="hidden" name="ids" value="@ViewBag.idgr" />
                        <button onclick="reload();" type="submit" data-toggle="tooltip" data-placement="bottom" title="Thêm vào nhóm" class="btn btn-primary"><i class=" ion ion-md-person-add"></i></button>
                    </form>

                </td>
            </tr>
        }
    </tbody>
</table>
<script>
    function reload() {
        window.location.reload();
    }
</script>

