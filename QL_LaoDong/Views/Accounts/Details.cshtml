@model QL_LaoDong.ViewModels.Profile

@{
    ViewData["Title"] = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row">
    <div class="col-sm-12">
        <div class="card">
            <div class="card-header">
                <h4>THÔNG TIN CÁ NHÂN</h4>
            </div>
            <div class="card-body">
                <div class="row">
                    <div class="col-md-6">
                        <div class="upload-image">
                            <div>
                                <img src="assets/images/046.jpg" style="height:250px; padding: 30px; border-radius: 100px;">
                            </div>
                        </div>
                        <div class="card">
                            <div class="card-header">
                                <h5>Số ngày lao động</h5>
                            </div>
                            <div class="card-body">
                                <div class="progress mb-4">
                                    <div class="progress-bar" role="progressbar" style="width: 100%;" aria-valuenow="25" aria-valuemin="0" aria-valuemax="100">100%</div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-group">
                            <label style="color: rgb(0, 0, 109); font-weight: bold;">MSSV</label> / <label style="color: rgb(115, 115, 236);"> @Html.DisplayFor(model => model.Mssv)</label>
                        </div>
                        <div class="form-group">
                            <label style="color: rgb(0, 0, 109); font-weight: bold;">Họ tên </label> / <label style="color: rgb(115, 115, 236);"> @Html.DisplayFor(model => model.FullName)</label>
                        </div>
                        <div class="form-group">
                            <label style="color: rgb(0, 0, 109); font-weight: bold;">Giới tính </label> / <label style="color: rgb(115, 115, 236);"> @Html.DisplayFor(model => model.Sex)</label>
                        </div>
                        <div class="form-group">
                            <label style="color: rgb(0, 0, 109); font-weight: bold;">Ngày sinh </label> / <label style="color: rgb(115, 115, 236);"> @Convert.ToDateTime(Model.DateOfBirth).ToString("dd/MM/yyyy")</label>
                        </div>
                        <div class="form-group">
                            <label style="color: rgb(0, 0, 109); font-weight: bold;">Tên khoa</label> / <label style="color: rgb(115, 115, 236);"> @Html.DisplayFor(model => model.FacultyName)</label>
                        </div>
                        <div class="form-group">
                            <label style="color: rgb(0, 0, 109); font-weight: bold;">Tên lớp</label> / <label style="color: rgb(115, 115, 236);"> @Html.DisplayFor(model => model.ClassName)</label>
                        </div>
                        <div class="form-group">
                            <label style="color: rgb(0, 0, 109); font-weight: bold;">Hệ đào tạo</label> / <label style="color: rgb(115, 115, 236);"> @Html.DisplayFor(model => model.TypeOfEducation)</label>
                        </div>
                        <div class="form-group">
                            <label style="color: rgb(0, 0, 109); font-weight: bold;">Khóa đào tạo</label> / <label style="color: rgb(115, 115, 236);"> @Html.DisplayFor(model => model.Training)</label>
                        </div>
                        <div class="form-group">
                            <label style="color: rgb(0, 0, 109); font-weight: bold;">Số ngày lao động</label> / <label style="color: rgb(115, 115, 236);"> @Html.DisplayFor(model => model.NumberOfWork)</label>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<div>
    <a asp-action="Index">Trở lại</a>
</div>
