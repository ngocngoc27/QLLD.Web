<section class="ftco-section">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-md-12 col-lg-10">
                <div class="wrap d-md-flex">
                    <div class="img">
                    </div>
                    <div class="login-wrap p-4 p-md-5">
                        <div class="d-flex justify-content-between align-items-center">
                            <div>
                                <h3 class="mb-4">Hệ thống <br> Quản lý lao động</h3>
                            </div>
                            <div>
                                <p class="social-media d-flex justify-content-end">
                                    <img src="assets/images/logo.png" style="width:60px">
                                </p>
                            </div>
                        </div>
                        <form class="signin-form" asp-action="Login" method="post">
                            <div class="form-group mb-3">
                                <label class="label" for="name">Tên tài khoản</label>
                                <input type="text" class="form-control" name="userName" placeholder="Tên tài khoản..." required>
                            </div>
                            <div class="form-group mb-3">
